{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["modules/common/*"],
      "@main/*": ["modules/main/*"],
      "@preload/*": ["modules/preload/*"],
      "@renderer/*": ["modules/renderer/src/*"],
      "@/*": ["modules/main/*"],
      "@type/*": ["types/*"]
    }
  },
  "include": [
    "modules/**/*.ts",
    "modules/**/*.d.ts",
    "modules/**/*.vue",
    "types/**.d.ts",
    "scripts/**.mjs"
  ]
}
